<Window x:Class="DCOMProductions.MVVMDemo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCOMProductions.MVVMDemo.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="16">
        <Label> Customer Name: </Label>
        <TextBox Text="{Binding Customer.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Width = "336" />
        <Button Command="{Binding UpdateCommand}" Width="65">Update </Button>
    </StackPanel>
    
</Window>
